<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/app_subtitle"
            android:textAppearance="?attr/textAppearanceBodyMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wasm_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WASM: loading…"
                android:textAppearance="?attr/textAppearanceBodySmall" />

            <TextView
                android:id="@+id/threads_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Threads: checking…"
                android:textAppearance="?attr/textAppearanceBodySmall" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/backend_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/backend_wasm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="WASM" />

            <RadioButton
                android:id="@+id/backend_native"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Native" />

            <RadioButton
                android:id="@+id/backend_both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Both" />
        </RadioGroup>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/spartan_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Compress with Spartan2 (experimental)" />

        <TextView
            android:id="@+id/native_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Native backend unavailable. Run scripts/build_native.sh to enable it."
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_example_toy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Toy" />

            <Button
                android:id="@+id/btn_example_toy_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Toy (8)" />

            <Button
                android:id="@+id/btn_example_poseidon2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Poseidon2" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Prove + Verify" />

        <ProgressBar
            android:id="@+id/progress_running"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Circuit JSON"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <EditText
            android:id="@+id/input_json"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="6dp"
            android:background="@android:drawable/edit_text"
            android:fontFamily="monospace"
            android:gravity="top|start"
            android:hint="Paste circuit JSON here…"
            android:inputType="textMultiLine|textNoSuggestions"
            android:overScrollMode="always"
            android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear output" />

            <Button
                android:id="@+id/btn_copy_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Copy output" />
        </LinearLayout>

        <TextView
            android:id="@+id/output_text"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="6dp"
            android:background="#11000000"
            android:fontFamily="monospace"
            android:gravity="top|start"
            android:padding="10dp"
            android:text="Output will appear here."
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <WebView
            android:id="@+id/wasm_webview"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:alpha="0.01" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
