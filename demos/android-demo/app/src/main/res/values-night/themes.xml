<resources>
    <style name="Theme.NeoFoldDemo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Keep night theme aligned with day theme (web-demo style). -->
        <item name="colorPrimary">#7CA6FF</item>
        <item name="colorOnPrimary">#071426</item>
        <item name="colorPrimaryContainer">#1A2B52</item>
        <item name="colorOnPrimaryContainer">#DCE9FF</item>

        <item name="colorSecondary">#B7C7E6</item>
        <item name="colorOnSecondary">#0B1220</item>
        <item name="colorSecondaryContainer">#16233F</item>
        <item name="colorOnSecondaryContainer">#D7E3FF</item>

        <item name="colorTertiary">#7EF0B2</item>
        <item name="colorOnTertiary">#052014</item>
        <item name="colorTertiaryContainer">#083525</item>
        <item name="colorOnTertiaryContainer">#B7F8D7</item>

        <item name="colorSurface">#0B1220</item>
        <item name="colorOnSurface">#E6ECF6</item>
        <item name="colorSurfaceVariant">#101A2C</item>
        <item name="colorOnSurfaceVariant">#C7D3EA</item>
        <item name="colorOutline">#2A3A59</item>
        <item name="colorOutlineVariant">#1D2A43</item>

        <item name="android:colorBackground">#0B1220</item>

        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>

        <item name="materialButtonOutlinedStyle">@style/Widget.NeoFoldDemo.Button.Outlined</item>
    </style>
</resources>
